<odoo>
    <data>
        <!-- Equipos -->
        <record id="equipo_real_madrid" model="lgc_futbol.equipo">
            <field name="name">Real Madrid</field>
            <field name="fundacion">1902-03-06</field>
            <field name="estadio">Santiago Bernab√©u</field>
            <field name="ciudad">Madrid</field>
            <field name="portada" type="base64" file="real_madrid_logo.jpg"/>
        </record>

        <record id="equipo_barcelona" model="lgc_futbol.equipo">
            <field name="name">Barcelona</field>
            <field name="fundacion">1899-11-29</field>
            <field name="estadio">Camp Nou</field>
            <field name="ciudad">Barcelona</field>
            <field name="portada" type="base64" file="barcelona_logo.jpg"/>
        </record>

        <!-- Jugadores -->
        <record id="jugador_messi" model="lgc_futbol.jugador">
            <field name="name">Lionel Messi</field>
            <field name="edad">34</field>
            <field name="posicion">Delantero</field>
            <field name="equipo_id" ref="equipo_barcelona"/>
            <field name="portada" type="base64" file="messi_photo.jpg"/>
        </record>

        <record id="jugador_ramos" model="lgc_futbol.jugador">
            <field name="name">Sergio Ramos</field>
            <field name="edad">35</field>
            <field name="posicion">Defensa</field>
            <field name="equipo_id" ref="equipo_real_madrid"/>
            <field name="portada" type="base64" file="ramos_photo.jpg"/>
        </record>

        <!-- Ligas -->
        <record id="liga_laliga" model="lgc_futbol.liga">
            <field name="name">La Liga</field>
            <field name="fecha_inicio">2024-08-01</field>
            <field name="fecha_fin">2025-05-30</field>
            <field name="equipos" eval="[('add', [ref('equipo_real_madrid'), ref('equipo_barcelona')])]"/>
        </record>

        <!-- Partidos -->
        <record id="partido_clasico" model="lgc_futbol.partido">
            <field name="equipo_local" ref="equipo_real_madrid"/>
            <field name="equipo_visitante" ref="equipo_barcelona"/>
            <field name="fecha">2024-10-25 20:00:00</field>
        </record>

    </data>
</odoo>
