<odoo>
  <data>
    
    <record model="ir.ui.view" id="lgc_futbol.partido_tree_view">
      <field name="name">Partido</field>
      <field name="model">lgc_futbol.partido</field>
      <field name="arch" type="xml">
        <tree>
        <field name="equipo_local"></field>
        <field name="equipo_visitante"></field>
          <field name="fecha" widget="calendar"/>
          <field name="resultado"/>
           <field name="jugadores">
            <tree>
              <field name="name"/>
              <field name="edad"/>
              <field name="posicion"/>
              <field name="equipo_id"/>
            </tree>
            </field>
        </tree>
    </field>
</record>



    <record model="ir.ui.view" id="lgc_futbol.partido_>form_view">
      <field name="name">Partido</field>
      <field name="model">lgc_futbol.partido</field>
      <field name="arch" type="xml">
        <form>
          <group>
          <field name="equipo_local"></field>
        <field name="equipo_visitante"></field>
            <field name="fecha" widget="calendar"/>
            <field name="resultado"/>
              <field name="jugadores">
                <tree>
                  <field name="name"/>
                  <field name="edad"/>
                  <field name="posicion"/>
                  <field name="equipo_id"/>
                </tree> 
              </field>
           
          </group>
        </form>
      </field>
    </record>



<record model="ir.ui.view" id="lgc_futbol.partido_kanban_view">
    <field name="name">Partido Kanban</field>
    <field name="model">lgc_futbol.partido</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="id"></field>
            <field name="equipo_local"/>
            <field name="equipo_visitante"/>
            <field name="fecha" widget="calendar"/>
            <field name="resultado"/>
            <field name="jugadores"/> 
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="oe_kanban_details">
                            <ul class="kanban-fields">
                                <li>Partido: <field name="id"/></li>  
                                <li> <field name="equipo_local"/> VS <field name="equipo_visitante"/> </li>     
                                <ul>
                                    <t t-foreach="record.jugadores" t-as="jugador">
                                        <li class="player-item">
                                            <span class="player-name"><t t-esc="jugador.name"/></span> 
                                            <span class="player-position"><t t-esc="jugador.posicion"/></span>
                                        </li>
                                    </t>  
                                </ul>                
                            </ul>
                        </div>
                    </div>
                </t>
            </templates>
             <search>
                <field name="id"/>
            </search>
        </kanban>
    </field>
</record>

<!--  Vista de un grÃ¡fico   -->

        <record model="ir.ui.view" id="lgc_futbol.partido_team_graph_view">
            <field name="name">Partido Team Graph</field>
            <field name="model">lgc_futbol.partido</field>
            <field name="arch" type="xml">
                <graph string="Partidos jugados por equipo" type="bar">
                  
                  <field name="resultado" type="row" />
                  
                    <field name="id" type="measure" operator="count"/>
                </graph>
            </field>
        </record>

<!--  Vista de un calendario   -->

        <record model="ir.ui.view" id="lgc_futbol.partido_calendar_view">
            <field name="name">Calendar</field>
            <field name="model">lgc_futbol.partido</field>
            <field name="arch" type="xml">
                <calendar string="Partidos" date_start="fecha" color="equipo_local" >
                    <field name="fecha"/>
                    <field name="equipo_local"/>
                    <field name="equipo_visitante"/>
                    <field name="resultado"/>
                </calendar>
            </field>
        </record>






  </data>
</odoo>