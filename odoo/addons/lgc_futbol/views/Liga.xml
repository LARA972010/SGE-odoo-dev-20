<odoo>
  <data>
    
    <record model="ir.ui.view" id="lgc_futbol.liga_tree_view">
      <field name="name">Liga</field>
      <field name="model">lgc_futbol.liga</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fecha_inicio"/>
          <field name="fecha_fin"/>
           <field name="equipos">
            <tree>
              <field name="name"/>
              <field name="estadio"/>
              <field name="ciudad"/>
            </tree>         
           </field>
            
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="lgc_futbol.liga_form_view">
      <field name="name">Liga Kanban</field>
      <field name="model">lgc_futbol.liga</field>
      <field name="arch" type="xml">
        <form>
          <group>
          <field name="name"/>
          <field name="fecha_inicio"/>
          <field name="fecha_fin"/>
          <field name="equipos">
            <tree>
              <field name="name"/>
              <field name="estadio"/>
              <field name="ciudad"/>
            </tree>
          
          
          </field>
           
          </group>
        </form>
      </field>
    </record>



    <record model="ir.ui.view" id="lgc_futbol.liga_kanban_view">
    <field name="name">Liga Kanban</field>
    <field name="model">lgc_futbol.liga</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="id"></field>
            <field name="name"/>
            <field name="fecha_inicio"/>
            <field name="fecha_fin"/>
            <field name="equipos" widget="many2many_tags"/> 
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="oe_kanban_details">
                            <ul>
                                <li>Nombre: <t t-esc="record.name.value"/></li> 
                                <li>Fecha Inicio: <t t-esc="record.fecha_inicio.value"/></li>
                                <li>
                                    <ul>
                                        <t t-foreach="record.equipos.raw_value" t-as="equipo">
                                            <li><t t-esc="equipo.display_name"/></li> 
                                        </t>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </t>
            </templates>
             <search>
                <field name="id"/>
            </search>
        </kanban>
    </field>
</record>








  </data>
</odoo>



